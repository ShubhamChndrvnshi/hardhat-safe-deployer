{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "lib": [
      "es2018",
      "DOM"
    ],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "rootDirs": ["./src"],
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "exclude": ["dist", "node_modules"],
  "include": ["./src", "types.ts"]
}
